{
  "name": "bionik-inmotion",
  "version": "0.1.0",
  "description": "Bionik Inmotion",
  "main": "app/index.js",
  "scripts": {
    "test": "node tests/http-test.js > tests/test-result",
    "compile:ts": "browserify --debug src/ts/main.ts -p [ tsify --project src/ts/tsconfig.json ] -o public/js/app.js",
    "watch:ts": "watchify -v --debug src/ts/main.ts -p [ tsify --project src/ts/tsconfig.json ] -o public/js/app.js",
    "build:ts": "browserify src/ts/main.ts -p [ tsify --project src/ts/tsconfig.json ] | uglifyjs -cm -o public/js/app.js",
    "clean:ts": "rm -f public/css/app.js",
    "compile:pcss": "postcss src/pcss/index.pcss -o public/css/app.css",
    "watch:pcss": "postcss src/pcss/index.pcss --watch -o public/css/app.css",
    "build:pcss": "postcss src/pcss/index.pcss --env production -o public/css/app.css",
    "clean:pcss": "rm -f public/css/app.css",
    "build:client": "run-s build:ts build:pcss",
    "watch:server": "nodemon",
    "build:server": "tsc --p server/tsconfig.json",
    "clean:server": "rm -f server/*.js server/lib/*.js server/controllers/*.js server/models/*.js server/state/*.js",
    "build:app": "tsc --p app/tsconfig.json",
    "clean:app": "rm -f app/*.js",
    "compile": "run-s compile:* build:server",
    "build": "run-s build:client build:app",
    "clean": "run-s clean:*",
    "serve": "ts-node --project ./app ./app/index.ts",
    "ch-fs": "sleep 2 && chromium-browser --kiosk http://localhost:3000/",
    "start": "run-p build:app watch:*",
    "start-ch": "run-p serve ch-fs"
  },
  "keywords": [],
  "author": "Pixelpusher",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/body-parser": "^1.16.7",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.0.39",
    "@types/fs-extra": "^4.0.3",
    "@types/node": "^8.0.47",
    "@types/socket.io": "^1.4.31",
    "@types/socketio-wildcard": "^2.0.0",
    "@types/username": "^1.0.28",
    "body-parser": "^1.18.2",
    "dotenv": "^4.0.0",
    "electron": "^7.2.4",
    "electron-pdf-window": "^1.0.12",
    "express": "^4.16.2",
    "fs-extra": "^4.0.2",
    "mithril": "^1.1.5",
    "socket.io": "^2.0.4",
    "socketio-wildcard": "^2.0.0",
    "ts-node": "^3.3.0",
    "typescript": "2.5.3",
    "username": "^3.0.0"
  },
  "devDependencies": {
    "@types/mithril": "^1.1.11",
    "@types/socket.io-client": "^1.4.31",
    "autoprefixer": "^7.1.6",
    "browserify": "^14.5.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^4.1.1",
    "postcss-custom-properties": "^6.2.0",
    "postcss-import": "^11.0.0",
    "postcss-nesting": "^4.2.1",
    "tsify": "^3.0.3",
    "tslint": "^4.5.1",
    "uglify-js": "^3.1.6",
    "watchify": "^3.9.0"
  }
}
